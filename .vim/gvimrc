if has('win32')
    set columns=120
    set guifont=Hack_Nerd_Font_Mono:h12,Consolas:h12
    set guifontwide=MS_Gothic:h13
    set lines=40
    set linespace=0

    function! s:ToggleMaxmize() abort
        if &columns < 120 || &columns > 160
            set columns=120
            set lines=40
        elseif &columns < 160
            set columns=160
            set lines=60
        else
            simalt ~x
        endif
    endfunction

    nnoremap <M-CR> <Cmd>call <SID>ToggleMaxmize()<CR>
endif
