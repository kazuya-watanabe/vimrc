if has('win32')
    set columns=120
    set guifont=Hack_Nerd_Font_Mono:h12,Consolas:h12
    set guifontwide=MS_Gothic:h12
    set lines=40
    set linespace=0
    set renderoptions=type:directx

    function! s:ToggleMaxmize() abort
        let l:last_columns = &columns
        let l:last_lines = &lines

        simalt ~x

        if l:last_columns == &columns && l:last_lines == &lines
            simalt ~r
        endif
    endfunction

    nnoremap <M-CR> <Cmd>call <SID>ToggleMaxmize()<CR>
endif
